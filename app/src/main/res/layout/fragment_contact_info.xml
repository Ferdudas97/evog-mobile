<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.login.signin.ContactInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createAcccountButton"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberInput" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="98dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailInput"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phoneNumberInput" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/emailInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:hint="Phone number"/>

</androidx.constraintlayout.widget.ConstraintLayout>