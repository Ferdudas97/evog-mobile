<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".view.login.signin.PersonalInfoFragment">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/firstNameInput"
            android:hint="First name*" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/secondNameInput"
            android:hint="Second name*" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/firstNameInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"/>
    <CalendarView
            android:layout_width="214dp"
            android:layout_height="86dp"
            android:id="@+id/birthDate" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/secondNameInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"/>
    <TextView
            android:text="Birth date*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/birthDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"/>
    <RadioGroup
            android:layout_width="250dp"
            android:layout_height="29dp"
            android:orientation="horizontal"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/birthDate" android:id="@+id/sexRG"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp">
        <RadioButton
                android:text="Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
        <RadioButton
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="Sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sexTV"
            app:layout_editor_absoluteX="120dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/sexRG"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/birthDate"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintVertical_bias="0.6"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/descriptionInput" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/sexRG" android:hint="Description"/>
</androidx.constraintlayout.widget.ConstraintLayout>