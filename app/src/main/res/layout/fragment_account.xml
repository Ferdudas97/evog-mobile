<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".view.login.signin.AccountFragment"
                                                   android:id="@+id/frameLayout">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginInput"
            android:hint="login" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp" android:layout_marginTop="252dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/firstPasswordInput"
            android:hint="password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/loginInput"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/secondPasswordInput" android:hint="password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/firstPasswordInput"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/secondPasswordInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="222dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="101dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>