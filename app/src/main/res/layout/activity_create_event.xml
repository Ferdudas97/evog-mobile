<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.events.CreateEventActivity">

    <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createEventButton" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/creatorLayer"
            android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/creatorLayer" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/eventNameInput" android:hint="Event name" android:inputType="text"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/startTimeInput" android:layout_weight="1" android:text="Start Time"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/endTimeInput" android:layout_weight="1"
                    android:text="End Time"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="People limit range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"/>
            <TextView
                    android:text="Age limit range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/minPeopleInput"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:hint="min"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                <EditText
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:id="@+id/maxPeopleInput"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:hint="max"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/minAgeInput" android:layout_weight="1" android:hint="min"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                <EditText
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/maxAgeInput"
                        android:layout_weight="1" android:hint="max"/>
            </LinearLayout>
        </LinearLayout>
        <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:checkedButton="@+id/partyRb" android:id="@+id/categoryRG">
            <RadioButton
                    android:text="Party"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/partyRb" android:layout_weight="1"/>
            <RadioButton
                    android:text="Sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sportRb" android:layout_weight="1"/>
            <RadioButton
                    android:text="Other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/otherRb" android:layout_weight="1"/>
        </RadioGroup>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/eventDescriptionInput" android:layout_weight="2" android:hint="Description"/>
        <fragment android:id="@+id/locationPicker"
                  android:name="org.agh.pracinz.evog.view.events.LocationPickerFragment"
                  android:layout_width="match_parent"
                  android:layout_height="150dp"
                  tools:context=".view.events.CreateEventActivity"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>